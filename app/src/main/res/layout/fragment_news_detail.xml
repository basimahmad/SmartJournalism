<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/news_title"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:layout_alignParentStart="true"/>

            <ImageButton
                android:id="@+id/bookmark_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bookmark"
                android:background="@color/white"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/news_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2012-05-01"
            android:textColor="@color/gray"
            android:textSize="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/news_timestampd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dsaaaaaaaaaaa"
            android:textColor="@color/gray"
            android:textSize="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/news_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By James"
            android:textColor="@color/gray"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/news_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/news_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <VideoView
            android:id="@+id/news_video1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/news_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/news_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"/>
        <ImageView
            android:id="@+id/news_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </LinearLayout>
</ScrollView>