<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.basimahmad.smartjournalism.MainActivity">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="40"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/news_title"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/colorAccent"
                android:textSize="30dp"
                android:layout_alignParentStart="true"
                />

            <ImageButton
                android:id="@+id/bookmark_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bookmark"
                android:background="@color/white"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/news_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2012-05-01"
            android:textColor="@color/gray"
            android:textSize="10dp"
            android:layout_marginTop="10dp"/>
        <!--<TextView
            android:id="@+id/news_timestampd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dsaaaaaaaaaaa"
            android:textColor="@color/gray"
            android:textSize="10dp"
            android:layout_marginTop="10dp"/>
-->
        <TextView
            android:id="@+id/news_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By James"
            android:textColor="@color/gray"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/news_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/news_img1"
            android:layout_width="500dp"
            android:layout_height="500dp"
            />
        <VideoView
            android:id="@+id/news_video1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/news_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/news_img2"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_marginBottom="30dp"/>
        <ImageView
            android:id="@+id/news_img3"
            android:layout_width="500dp"
            android:layout_height="500dp" />

    </LinearLayout>
</ScrollView>
    <ListView
        android:id="@+id/listViewComment"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </ListView>
    <include
        layout="@layout/comment_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginTop="5dp"/>
</LinearLayout>